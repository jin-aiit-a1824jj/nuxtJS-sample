npm init
npx create-nuxt-app hello-nuxt

#To get started:
cd hello-nuxt
npm run dev

#To build & start for production:
cd hello-nuxt
npm run build

**/hello-nuxt/nuxt.config.js
server: {
  port: 8000, // デフォルト: 3000
  host: '0.0.0.0' // デフォルト: localhost
}


